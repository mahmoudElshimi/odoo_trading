<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>

	    <record id="category_rusetta_trade" model="ir.module.category">
		<field name="name">Rusetta Trade</field>
	        <field name="parent_id" ref="base.module_category_hidden"/>
		<field name="sequence">7</field>
	    </record>

	    <record id="group_trade_admin" model="res.groups">
		<field name="name">Trade Admin</field>
		<field name="category_id" ref="rusetta_trade.category_rusetta_trade"/>
	    </record>

	    <record id="group_trade_user" model="res.groups">
		<field name="name">Trade User</field>
		<field name="category_id" ref="rusetta_trade.category_rusetta_trade"/>
	    </record>

	    <record id="rule_user_only_their_rec" model="ir.rule">
		<field name="name">rusetta.trade.show.only.user</field>
		<field name="model_id" ref="rusetta_trade.model_rusetta_trade"/>
		<field name="domain_force">[("create_uid", "=", user.id)]</field>
		<field name="groups" eval="[(4, ref('rusetta_trade.group_trade_user'))]"/>
		<field name="perm_read" eval="True"/>
		<field name="perm_write" eval="True"/>
		<field name="perm_create" eval="True"/>
		<field name="perm_unlink" eval="False"/>
	    </record>

	</data>
</odoo>
